{
    // Required
    "manifest_version": 2,
    "name": "Sane Twitter",
    "version": "1",
  
    // Recommended
    "description": "A plain text description",
    // "icons": {...},

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.twitter.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}