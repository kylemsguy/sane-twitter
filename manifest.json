{
    // Required
    "manifest_version": 2,
    "name": "Sane Twitter",
    "version": "1",
  
    // Recommended
    "description": "Revert Twitter back to its previous, more sane and usable, form",
     "icons": {
         "128": "dove-emoji-1F54A.png"
     },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.twitter.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}